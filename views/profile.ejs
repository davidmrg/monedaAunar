<%- include('partials/header') -%>

    <div class="col-xl-12 col-md-12 dimenciones">
        <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
                <div class="col-sm-4 bg-c-lite-green user-profile">

                    <div class="card-block text-center text-white">
                        <div><img class="img-radius" src="<%= user.picture %>" alt="User-Profile-Image"> </div>
                        <h6 class="Nombre">
                            <%= user.given_name %>
                        </h6>
                        <p class="Carrera"> Ingenieria Informatica</p>
                    </div>

                </div>
                <div class="col-sm-8">
                    <div class="card-block">
                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Información de Estudiante</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Nombres</p>
                                <h6 class="text-muted f-w-400">
                                    <%= nombre %>
                                </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Apellidos</p>
                                <h6 class="text-muted f-w-400">
                                    <%= apellido %>
                                </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Identificación</p>
                                <h6 class="text-muted f-w-400">
                                    <%= numIdentidad %>
                                </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Carrera</p>
                                <h6 class="text-muted f-w-400">
                                    <%= carrera %>
                                </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Email</p>
                                <h6 class="text-muted f-w-400">
                                    <%= user.email %>
                                </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="m-b-10 f-w-600">Puntos registrados</p>
                                <h6 class="text-muted f-w-400">
                                    <%= puntos_Acum %>
                                </h6>
                            </div>
                        </div>

                        <ul class="social-link list-unstyled m-t-40 m-b-10">
                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--
<pre class="block bg-gray-300 p-4 text-sm overflow-scroll"><%= userProfile %></pre>
-->


    <table class="table">
        <thead class="headtable">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Actividades</th>
                <th scope="col">Puntos</th>
                <th scope="col">Fecha</th>
                <th scope="col">Total De Puntos</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i< (Object.keys(actividad).length / 2);i++){ %>
                <tr>
                    <th scope="row">
                        <%= i %>
                    </th>
                    <td>
                        <%= actividad[`Actividad${i}`] %>

                    </td>
                    <td>
                        <%= actividad[`Puntos${i}`] %>
                    </td>
                    <td>
                        <%= fecha %>
                    </td>
                    <td>
                        <%= actividad[`Puntos${i}`] %>
                    </td>
                </tr>
                <% } %>
                    <tr>
                        <th colspan="5">%</th>
                    </tr>
        </tbody>
    </table>

    <div class="progress">
        <% var umbralPuntos = 40; %>
            <% var porcentaje = (100 * puntos_Acum)/umbralPuntos; %>

                <div class="progress-bar" style="width:<%= porcentaje %>%">
                    <%= porcentaje %>
                </div>
    </div>

    <img class="monedalogo" src="http://www.mediafire.com/convkey/21b6/kp6wiwve4c8gg8jzg.jpg">

    <br><br><br><br><br>


    <%- include('partials/footer') -%>